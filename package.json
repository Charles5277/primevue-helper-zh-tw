{
  "name": "primevue-helper",
  "version": "1.0.1",
  "displayName": "Primevue Helper",
  "description": "support open API document and insert code snippet!",
  "publisher": "QuickView",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "tags": [
    "primevue",
    "primevue-helper",
    "primevue-snippet",
    "primevue-api",
    "primevue-doc"
  ],
  "activationEvents": [],
  "icon": "docs_assets/icon.png",
  "main": "dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "componentTree.insertCode",
        "title": "Insert Code Snippet"
      },
      {
        "command": "componentTree.openDoc",
        "title": "Open Document"
      },
      {
        "command": "componentTree.ui.primevue",
        "title": "Primevue"
      },
      {
        "command": "componentTree.ui.antd",
        "title": "Ant Design"
      },
      {
        "command": "componentTree.ui.vant",
        "title": "Vant"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "componentTree.ui.primevue",
          "when": "view == component-tree"
        },
        {
          "command": "componentTree.ui.antd",
          "when": "view == component-tree"
        },
        {
          "command": "componentTree.ui.vant",
          "when": "view == component-tree"
        }
      ],
      "view/item/context": [
        {
          "command": "componentTree.insertCode",
          "when": "view == component-tree && viewItem == leafNode",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "primevue-helper",
          "title": "Primevue Helper",
          "icon": "image/icon.svg"
        }
      ]
    },
    "views": {
      "primevue-helper": [
        {
					"type": "webview",
					"id": "component-tree-webview",
          "icon": "image/icon.svg",
					"name": "Component Tree"
				}
      ]
    }
  },
  "scripts": {
    "gen-meta": "deno run -A --unstable-sloppy-imports ./scripts/gen-component-config.ts",
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^8.57.0",
    "radash": "^12.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "mitt": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MMJG-Team/quick-view"
  },
  "vsce": {
    "dependencies": false,
    "pnpm": true
  }
}
